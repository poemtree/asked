<div class="row mt-3 ml-5">
  <div class="col-10">
      <h2>Posts</h2>
  </div>
  <div class="col-2">
    <a class="btn btn-primary" href="posts/new" role="button">글 작성</a>
  </div>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">번호</th>
      <th scope="col">제목</th>
      <th scope="col">쓴이</th>
      <th scope="col">내용</th>
      <th scope="col">날짜</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <a href="posts/<%= post.id %>">
          <th scope="row"><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= Post.find(post.id).user.username %></td>
          <td><%= post.content %></td>
          <td><%= post.created_at %></td>
        </a>
      </tr>
    <% end %>
  </tbody>
</table>
