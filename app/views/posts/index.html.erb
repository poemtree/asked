<div class="mt-3 ml-5">
    <h1>Welcome PoemTree's Board</h1>
</div>
<hr>
<div class="row mt-3 ml-5">
  <div class="col-10">
      <h2>Posts</h2>
  </div>
  <div class="col-2">
    <a class="btn btn-primary" href="posts/new" role="button">글 작성</a>
  </div>
</div>
<hr>
<% @posts.each do |post| %>
  <div class="row mt-1 ml-5">
    <div class="col-11">
      <p>번호 : <%= post.id %></p>
      <p>제목 : <%= post.title %></p>
      <p>쓴이 : <%= post.username %></p>
      <p>날짜 : <%= post.created_at %></p>
      <p>내용 : <%= post.content %></p>
    </div>
    <div class="cor-1">
      <a class="btn btn-primary" href="posts/<%= post.id %>" role="button">글 읽기</a>
    </div>
  </div>
  <hr>
<% end %>
